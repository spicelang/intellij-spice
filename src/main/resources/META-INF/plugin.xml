<idea-plugin>
    <id>com.spicelang.intellij-spice</id>
    <name>Spice</name>
    <vendor email="support@chillibits.com" url="https://www.chillibits.com">ChilliBits</vendor>
    <description>IntelliJ Language Plugin for the Spice Programming Language</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                language="Spice"
                name="Spice File"
                implementationClass="com.spicelang.intellij.spice.SpiceFileType"
                fieldName="INSTANCE"
                extensions="spice" />
        <lang.parserDefinition
                language="Spice"
                implementationClass="com.spicelang.intellij.spice.SpiceParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Spice"
                implementationClass="com.spicelang.intellij.spice.SpiceSyntaxHighlighterFactory"/>
    </extensions>

    <actions></actions>
</idea-plugin>